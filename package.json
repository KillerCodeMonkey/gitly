{
  "name": "gitly",
  "version": "2.1.5",
  "description": "An API to download and/or extract git repositories",
  "repository": "github:iwatakeshi/gitly",
  "author": "Takeshi Iwana <iwatakeshi@gmail.com>",
  "license": "MIT",
  "source": "src/index.ts",
  "main": "lib/common/index.js",
  "module": "lib/esm/index.js",
  "types": "lib/types/index.d.ts",
  "files": [
    "lib",
    "src",
    "tsconfig.json",
    "tsconfig.esm.json",
    "tsconfig.types.json"
  ],
  "engines": {
    "node": ">=12.0.0"
  },
  "dependencies": {
    "axios": "^1.2.1",
    "rambda": "^7.4.0",
    "rambdax": "^9.0.0",
    "tar": "^6.1.12"
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.19.6",
    "@babel/preset-env": "^7.20.2",
    "@types/jest": "^29.2.4",
    "@types/shelljs": "^0.8.11",
    "@types/tar": "^6.1.3",
    "jest": "^29.3.1",
    "serve": "^14.1.2",
    "shelljs": "^0.8.5",
    "ts-jest": "^29.0.3",
    "ts-readme": "^1.1.3",
    "tslib": "^2.4.1",
    "typedoc": "^0.23.21",
    "typedoc-plugin-missing-exports": "^1.0.0",
    "typescript": "^4.9.3"
  },
  "scripts": {
    "build": "npm run build:common && npm run build:esm && npm run build:types",
    "build:common": "tsc --project tsconfig.json",
    "build:esm": "tsc --project tsconfig.esm.json",
    "build:types": "tsc --project tsconfig.types.json",
    "test": "jest -i --coverage",
    "docs": "npm run docs:build && serve docs",
    "docs:build": "typedoc"
  },
  "keywords": [
    "archive",
    "bitbucket",
    "download",
    "extract",
    "fetch",
    "git",
    "github",
    "gitlab",
    "offline-first",
    "offline",
    "project",
    "repo",
    "repository",
    "scaffold",
    "tarbarll",
    "zip"
  ]
}
