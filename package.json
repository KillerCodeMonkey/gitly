{
  "name": "gitly",
  "version": "2.1.5",
  "description": "An API to download and/or extract git repositories",
  "repository": "github:iwatakeshi/gitly",
  "author": "Takeshi Iwana <iwatakeshi@gmail.com>",
  "license": "MIT",
  "source": "src/index.ts",
  "main": "lib/common/index.js",
  "module": "lib/esm/index.js",
  "types": "lib/types/index.d.ts",
  "typings": "dist/gitly.d.ts",
  "files": [
    "lib",
    "src"
  ],
  "engines": {
    "node": ">=12.0.0"
  },
  "dependencies": {
    "axios": "^0.24.0",
    "rambda": "^6.9.0",
    "rambdax": "^7.4.1",
    "tar": "^6.1.11"
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.16.0",
    "@babel/preset-env": "^7.16.0",
    "@types/jest": "^26.0.23",
    "@types/shelljs": "^0.8.8",
    "@types/tar": "^4.0.4",
    "jest": "^26.6.3",
    "serve": "^13.0.2",
    "shelljs": "^0.8.4",
    "ts-jest": "^26.5.5",
    "ts-readme": "^1.1.3",
    "tslib": "^2.2.0",
    "typedoc": "^0.22.8",
    "typedoc-plugin-missing-exports": "^0.22.4",
    "typescript": "^4.2.4"
  },
  "scripts": {
    "build": "npm run build:common && npm run build:esm && npm run build:types",
    "build:common": "tsc --project tsconfig.json",
    "build:esm": "tsc --project tsconfig.esm.json",
    "build:types": "tsc --project tsconfig.types.json",
    "test": "jest -i --coverage",
    "docs": "npm run docs:build && serve docs",
    "docs:build": "typedoc"
  },
  "keywords": [
    "archive",
    "bitbucket",
    "download",
    "extract",
    "fetch",
    "git",
    "github",
    "gitlab",
    "offline-first",
    "offline",
    "project",
    "repo",
    "repository",
    "scaffold",
    "tarbarll",
    "zip"
  ]
}
